<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.cwj.love_lhh.view.AutoRotateSecondView
        android:id="@+id/timeView_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.cwj.love_lhh.view.AutoRotateMinuteView
        android:id="@+id/timeView_minute"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.cwj.love_lhh.view.AutoRotateHoursView
        android:id="@+id/timeView_hours"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.cwj.love_lhh.view.AutoRotateWeekView
        android:id="@+id/timeView_week"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.cwj.love_lhh.view.AutoRotateDayView
        android:id="@+id/timeView_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.cwj.love_lhh.view.AutoRotateMonthView
        android:id="@+id/timeView_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/timeView_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:textColor="#ffffff"
        android:textSize="12dp" />

    <View
        android:id="@+id/v_dividing2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/myshape"
        android:visibility="visible" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
